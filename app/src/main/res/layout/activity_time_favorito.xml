<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TimeFavoritoActivity"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/time_favorito_seta_voltar_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back_sob_pressao_24dp"

                />

            <TextView
                android:id="@+id/time_favorito_nome_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SÃ£o Paulo F. C."
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="@color/colorGreyStrong"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_seta_voltar_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/time_favorito_info1_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_time1"
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:textColor="@color/colorGreyStrong"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_nome_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/time_favorito_desc_escudo_time_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/escudo"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/time_favorito_escudo_img_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_info1_id" />
            <TextView
                android:id="@+id/time_favorito_desc_camisa_time_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/camisa"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/time_favorito_camisa_img_id"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_info1_id" />

            <ImageView
                android:id="@+id/time_favorito_escudo_img_id"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/time_escudo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_desc_escudo_time_id"
                app:layout_constraintBottom_toTopOf="@id/time_favorito_info2_id"
                />
            <ImageView
                android:id="@+id/time_favorito_camisa_img_id"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/time_camisa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_desc_camisa_time_id"
                app:layout_constraintBottom_toTopOf="@id/time_favorito_info2_id"
                />
            <TextView
                android:id="@+id/time_favorito_info2_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_time2"
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:textColor="@color/colorGreyStrong"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_camisa_img_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/time_favorito_estadio_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/estadio"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/colorGreyStrong"
                android:textAllCaps="true"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_info2_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/time_favorito_estadio_img_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_estadio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_favorito_estadio_id"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>