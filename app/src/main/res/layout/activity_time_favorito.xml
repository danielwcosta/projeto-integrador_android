<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TimeFavoritoActivity"
    android:background="@drawable/grama_textura">
    <ImageView
        android:id="@+id/time_favorito_seta_voltar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_arrow_back_sob_pressao_24dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



<!--            strTeam-->
            <TextView
                android:id="@+id/time_favorito_nome_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="São Paulo F. C."
                android:textStyle="bold"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="@color/colorText"
               />
            <!--            strTeamBadge-->
            <ImageView
                android:id="@+id/time_favorito_escudo_img_id"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/time_escudo"
                android:layout_gravity="center"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/time_favorito_info1_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox_shape">

                <!--                strCountry-->
                <TextView
                android:id="@+id/time_favorito_paistag_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="País de origem: "
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:textColor="@color/colorTextWhite"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/time_favorito_info1_id"
                app:layout_constraintTop_toTopOf="@id/time_favorito_info1_id"
               />
                <TextView
                android:id="@+id/time_favorito_pais_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brasil"
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:textStyle="italic"
                android:textColor="@color/colorTextWhite"
                app:layout_constraintStart_toEndOf="@id/time_favorito_paistag_id"
                app:layout_constraintTop_toTopOf="@id/time_favorito_info1_id"
               />

                <!--                strStadiumLocation-->
                <TextView
                    android:id="@+id/time_favorito_cidadetag_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cidade de origem: "
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/time_favorito_info1_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_paistag_id"
                    />

                <TextView
                    android:id="@+id/time_favorito_cidade_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="São Paulo"
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textStyle="italic"
                    android:textColor="@color/colorTextWhite"
                    app:layout_constraintStart_toEndOf="@id/time_favorito_cidadetag_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_pais_id"
                    />

                <!--                strStadium-->
                <TextView
                    android:id="@+id/time_favorito_estadiotag_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do estádio: "
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/time_favorito_info1_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_cidadetag_id"
                    />

                <TextView
                    android:id="@+id/time_favorito_estadio_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morumbi"
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textStyle="italic"
                    android:textColor="@color/colorTextWhite"
                    app:layout_constraintStart_toEndOf="@id/time_favorito_estadiotag_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_cidade_id"
                    />

                <!--                intStadiumCapacity-->
                <TextView
                    android:id="@+id/time_favorito_capacidadeestadiotag_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacidade do estádio: "
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/time_favorito_info1_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_estadiotag_id"
                    />

                <TextView
                    android:id="@+id/time_favorito_capacidadeestadio_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67000"
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textStyle="italic"
                    android:textColor="@color/colorTextWhite"
                    app:layout_constraintStart_toEndOf="@id/time_favorito_capacidadeestadiotag_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_estadiotag_id"
                    />

                <!--                intFormedYear-->
                <TextView
                    android:id="@+id/time_favorito_anofundacaotag_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ano fundação: "
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/time_favorito_info1_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_capacidadeestadiotag_id"
                    />

                <TextView
                    android:id="@+id/time_favorito_anofundacao_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1930"
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textStyle="italic"
                    android:textColor="@color/colorTextWhite"
                    app:layout_constraintStart_toEndOf="@id/time_favorito_anofundacaotag_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_capacidadeestadio_id"
                    />

                <!--                strWebsite-->
                <TextView
                    android:id="@+id/time_favorito_websitetag_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: "
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextWhite"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/time_favorito_info1_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_anofundacaotag_id"
                    />

                <TextView
                    android:id="@+id/time_favorito_website_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.saopaulofc.net"
                    android:textSize="20sp"
                    android:textAlignment="gravity"
                    android:textStyle="italic"
                    android:textColor="@color/colorTextWhite"
                    app:layout_constraintStart_toEndOf="@id/time_favorito_websitetag_id"
                    app:layout_constraintTop_toBottomOf="@id/time_favorito_anofundacao_id"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

<!--            strTeamJersey-->
            <ImageView
                android:id="@+id/time_favorito_camisa_img_id"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:src="@drawable/time_camisa"
                android:layout_gravity="center"
                />

            <!--            strStadiumThumb-->
            <ImageView
                android:id="@+id/time_favorito_estadio_img_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_estadio"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sobre"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textColor="@color/colorText"
                />

<!--            strDescriptionPT-->
            <TextView
                android:id="@+id/time_favorito_info2_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/info_time2"
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:textColor="@color/colorTextWhite"
                android:background="@drawable/textbox_shape"
/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>